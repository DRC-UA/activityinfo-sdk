{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist",
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "Node"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
