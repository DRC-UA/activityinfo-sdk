{
  "compilerOptions": {
    "lib": ["ESNext"],
    "strict": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist",
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "disableSizeLimit": true
  },
  "include": ["src"],
  "exclude": ["src/interface", "**/*.spec.ts", "**/*.test.ts"]
}
